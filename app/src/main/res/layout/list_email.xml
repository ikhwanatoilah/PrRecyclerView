<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/profile_email"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/rounded_drawable"
            />

        <TextView
            android:id="@+id/symbol_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp"
            android:text="R"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/nama_email"
            android:text="Ikhwan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/judul_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="100dp"
            android:text="Weekend Adventure"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/isi_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="100dp"
            android:text="Let's Go Fishing Jhon and Other"
            />
        <ImageView
            android:id="@+id/mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_star_black_24dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="350dp"
            />
        <TextView
            android:id="@+id/jam_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00 AM"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="10dp"
            />


    </RelativeLayout>

</RelativeLayout>
